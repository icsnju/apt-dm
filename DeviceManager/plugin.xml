<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="icons/logo2.gif">
         <run
               class="dm.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="dm.Perspective"
            icon="icons/logo2.gif"
            id="DeviceManager.Perspective"
            name="RCP Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Device Information"
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="dm.view.MobileInfoView"
            id="DeviceManagerWeb.View.MobileInfoView">
      </view>
      <view
            name="Devices List"
            allowMultiple="true"
            icon="icons/sample3.gif"
            class="dm.view.ListView"
            id="DeviceManagerWeb.View.ListView">
      </view>
      <view
            class="dm.view.LogcatView"
            id="DeviceManagerWeb.View.LogcatView"
            name="Logcat"
            restorable="true">
      </view>
      <view
            class="org.eclipse.ui.navigator.CommonNavigator"
            id="DeviceManagerWeb.View.ProjectExplorer"
            name="Project Explorer"
            restorable="true">
      </view>
      <view
            class="dm.view.ConsoleView"
            id="DeviceManagerWeb.View.ConsoleView"
            name="Console"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Mail"
            id="DeviceManager.category">
      </category>
      <command
            name="Open Mailbox"
            description="Opens a mailbox"
            categoryId="DeviceManager.category"
            id="DeviceManager.open">
      </command>
      <command
            name="Open Message Dialog"
            description="Open a message dialog"
            categoryId="DeviceManager.category"
            id="DeviceManager.openMessage">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="DeviceManager.open"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+SHIFT+O">
      </key>
      <key
            commandId="DeviceManager.openMessage"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+SHIFT+M">
      </key>
      <key
            commandId="org.eclipse.ui.file.exit"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+SHIFT+Q">
      </key>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="DeviceManager.application"
            name="Device Manager">
         <property
               name="aboutText"
               value="Device Manager">
         </property>
         <property
               name="windowImages"
               value="icons/logo2.gif">
         </property>
         <property
               name="aboutImage"
               value="product_lg.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="dm.editor.DocEditor"
            default="false"
            id="DeviceManagerWeb.Editor.DocEditor"
            name="Doc Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="DeviceManagerWeb.View.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.examples.navigator.propertiesContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding
            viewerId="DeviceManagerWeb.View.ProjectExplorer">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="org.eclipse.ui.examples.navigator.PropertiesContentProvider"
            icon="icons/sample2.gif"
            id="DeviceManager.Navigator.propertiesContent"
            labelProvider="org.eclipse.ui.examples.navigator.PropertiesLabelProvider"
            name="Properties File Contents"
            priority="normal">
         <triggerPoints>
            <or>
               <and>
                  <instanceof
                        value="org.eclipse.core.resources.IResource">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.eclipse.core.resources.extension"
                        value="properties">
                  </test>
               </and>
               <instanceof
                     value="org.eclipse.ui.examples.navigator.PropertiesTreeData">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="org.eclipse.ui.examples.navigator.PropertiesTreeData">
               </instanceof>
            </or>
         </possibleChildren>
      </navigatorContent>
   </extension>

</plugin>
